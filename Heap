#include <stdio.h>

#define MAX 100

int heap[MAX];
int size = 0;

// Swap function
void swap(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

// Insert into Max Heap
void insert(int value) {
    size++;
    heap[size] = value;

    int i = size;

    // Heapify Up
    while (i > 1 && heap[i/2] < heap[i]) {
        swap(&heap[i], &heap[i/2]);
        i = i / 2;
    }
}

// Delete root (maximum) from heap
int deleteRoot() {
    if (size == 0) {
        printf("Heap is empty!\n");
        return -1;
    }

    int maxValue = heap[1];      // root element
    heap[1] = heap[size];        // move last element to root
    size--;

    int i = 1;

    // Heapify Down
    while (1) {
        int left = 2 * i;
        int right = 2 * i + 1;
        int largest = i;

        if (left <= size && heap[left] > heap[largest])
            largest = left;

        if (right <= size && heap[right] > heap[largest])
            largest = right;

        if (largest != i) {
            swap(&heap[i], &heap[largest]);
            i = largest;
        } else {
            break;
        }
    }

    return maxValue;
}

// Display heap (level order)
void display() {
    if (size == 0) {
        printf("Heap is empty!\n");
        return;
    }

    printf("Heap elements: ");
    for (int i = 1; i <= size; i++) {
        printf("%d ", heap[i]);
    }
    printf("\n");
}

int main() {
    int n, value;

    printf("Enter number of elements to insert: ");
    scanf("%d", &n);

    printf("Enter %d values:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &value);
        insert(value);
    }

    printf("\nAfter insertion: ");
    display();

    printf("\nDeleting root...\n");
    int deletedValue = deleteRoot();
    printf("Deleted value = %d\n", deletedValue);

    printf("\nAfter deletion: ");
    display();

    return 0;
}
